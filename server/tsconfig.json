{
  "compilerOptions": {
    "target": "ES2020",
    "noImplicitAny": false,
    "module": "ESNext",
    "noEmitOnError": false,
    "lib": [
      "es6",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": [
      "@cloudflare/workers-types/2023-07-01",
      "@cloudflare/vitest-pool-workers"
    ],
    // "baseUrl": ".",
    // "paths":{
    //   "@trpc":["trpc"],
    //   "trpc":["../src/routes/index"],
    //   "src":["../src"]
    // },
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
  ],
  "include": [
    "./src/**/*.ts",
    "src/drizzle.config.ts",
    "src/vitest.config.ts",
    "src/worker-configuration.d.ts"
  ]
}